{
  "$schema": "https://platformatic.dev/schemas/v1.43.0/db",
  "db": {
    "connectionString": "sqlite://./db.sqlite",
    "graphql": true,
    "openapi": true,
    "schemalock": true
  },
  "watch": {
    "ignore": ["*.sqlite", "*.sqlite-journal"]
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": ""
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins/loggingPlugin.js",
        "encapsulate": false
      },
      {
        "path": "./routes"
      }
    ],
    "typescript": "false"
  },
  "types": {
    "autogenerate": true
  },
  "clients": [
    {
      "schema": "todoClient/todoClient.openapi.json",
      "name": "todoClient",
      "type": "openapi",
      "url": "{PLT_TODOCLIENT_URL}"
    }
  ]
}